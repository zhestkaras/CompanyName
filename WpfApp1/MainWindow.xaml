<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
          
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            
        </Grid.ColumnDefinitions>
        <Rectangle Fill="LightBlue" Grid.ColumnSpan="2" Grid.RowSpan="2" Panel.ZIndex="-1"/>
        <Label   Grid.Row="0" HorizontalAlignment="Left" FontSize="33" VerticalAlignment="Center" Content="Company Name"/>
        
        <StackPanel Grid.Column="0"  Grid.Row="3"  >
            <Label Content = "Phone Number"/>
            <TextBox FontSize="15" x:Name="text1" Text="" Margin="0,0,15,0" />
        </StackPanel>
        
        <StackPanel Grid.Column="1"  Grid.Row="3"  >
            <Label Content="Phone Number" Width="368"/>
            <TextBox FontSize="15" x:Name="text2" Text="" Margin="15,0,0,0" />
        </StackPanel>
        
        <StackPanel Grid.Column="0"  Grid.Row="2"  >
            <Label Content="Customer Number" Margin="0,0,15,0"/>
            <TextBox FontSize="15" x:Name="text4" Text="" Margin="0,0,15,0" />
        </StackPanel>
        
        <StackPanel Grid.Column="2"  Grid.Row="2"  >
            <Label Content="Associate" Margin="0,0,15,0" Width="355"/>
            <TextBox FontSize="15" x:Name="text0" Text="" Margin="15,0,0,0" />
        </StackPanel>
        
        <StackPanel Grid.Column="0"  Grid.Row="4"  >
            <Label Content="Address" Margin="0,0,15,0" Width="355"/>
            <TextBox FontSize="15" x:Name="text5" Text="" Margin="15,0,0,0" />
            
        </StackPanel>
        <StackPanel Grid.Column="0"  Grid.Row="5"  >
            
            <TextBox FontSize="15" x:Name="text6" Text="" Margin="15,15,0,0" />

        </StackPanel>

        <Grid Grid.Row=" 1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
               
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center">Orders</Label>
            <Label Grid.Column="1" HorizontalAlignment="Center" FontSize="15" VerticalAlignment="Center">Customers</Label>
            <Label Grid.Column="2" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center">Invoices</Label>
            <Label Grid.Column="3" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center">Stock</Label>
            <Label Grid.Column="4"></Label>
            <Label Grid.Column="5" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center">+</Label>
            <Label Grid.Column="6" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center">✎</Label>
            <Label Grid.Column="7" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" >🗑️</Label>
            <Label Grid.Column="8" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center">🖨️</Label>
            <Label Grid.Column="9" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center">...</Label>

        </Grid>


    </Grid>
</Window>
